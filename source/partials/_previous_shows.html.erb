<div class="container matches">
  <div class="row">
    <div class="col-xs-12">
      <h2>Previous Shows</h2>
    </div>
  </div>
  <div class="upcoming-shows center-block">
    <% data.shows.sort_by{|s| s[0]}.each do |show| %>
      <% unless show[1].scores.nil? %>
        <div class="col-md-6 col-lg-4 ">
          <div class="match-box done <%= show[1]['location'] %>">
            <div class="names">
              <% show[1].teams.each_with_index do |team, index| %>
                <%= data.teams["#{team}"].name if data.teams["#{team}"]%>: <%= "#{show[1].scores[index]["#{team}"]}" %>pt<br/>
              <% end %>
              <%= show[1]['date'] %>
            </div>
            <a href="/shows/<%= show[0] %>/"><span></span></a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
